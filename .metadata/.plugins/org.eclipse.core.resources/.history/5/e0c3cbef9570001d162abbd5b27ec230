#include "main.h"
#include "timer.h"

int reset_flag=0;
int reset_counter=0;
void setTimerReset(int duration)
{
	reset_counter=duration/10;
	reset_flag=0;
}
void timerRun()
{
	if(reset_counter>0)
	{
		reset_counter--;
		if(reset_counter<=0)
		{
			reset_flag=1;
		}
	}
}
void HAL_TIM_PeriodElapsedCallback ( TIM_HandleTypeDef * htim )
{
if(htim->Instance == TIM2 ) {
button_reading () ;
}
}
